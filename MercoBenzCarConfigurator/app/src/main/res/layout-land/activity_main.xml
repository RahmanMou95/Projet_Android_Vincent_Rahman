<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vince.merco_benzcarconfigurator.MainActivity"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view1"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageButton
                android:src="@drawable/mercedes_f1_team_logo_png"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view1"
                android:layout_marginTop="30dp"
                android:id="@+id/Image_Mercedes"
                android:background="@android:color/transparent"
                android:onClick="Merco_Image"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_complementaire"
                android:layout_below="@id/Image_Mercedes"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:text="Cette image est un bouton"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>